# Omni-Channel CRM Environment Variables

# App
APP_NAME="Omni-Channel CRM"
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/omnicrm
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/omnicrm

# Redis
REDIS_URL=redis://localhost:6379/0

# Auth
SECRET_KEY=change-this-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+18012129267
TWILIO_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/twilio/sms

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=hello@yourdomain.com

# AI Providers
AI_PROVIDER=anthropic
AI_MODEL=claude-3-haiku-20240307
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Ollama (local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Compliance
QUIET_HOURS_START=21
QUIET_HOURS_END=8
DEFAULT_TIMEZONE=America/Denver
